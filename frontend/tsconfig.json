{
  "compilerOptions": {
    "target": "es2021", // Or "esnext" for the latest features
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true, // Recommended for better code quality
    "module": "esnext", // Or "commonjs" if you are not using a bundler that supports ES Modules
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true, // True if using a bundler like Webpack, Vite, or Parcel
    "jsx": "react-jsx", // For React 17+
    "outDir": "./dist", // Output directory for compiled files (if noEmit is false)
    "rootDir": "./src", // Root directory of your source files
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"] // Example for path aliases
    },
    "incremental": true, // Enable incremental compilation for faster rebuilds
    "tsBuildInfoFile": "./node_modules/.tsbuildinfo", // Location for build info file
    "types": ["node"] // Include necessary type definitions
  },
  "include": [
    "src/**/*", // Include all files in the src directory
    "src/global.d.ts", // Global type declarations
    "declaration.d.ts" // If you have global declaration files
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}
